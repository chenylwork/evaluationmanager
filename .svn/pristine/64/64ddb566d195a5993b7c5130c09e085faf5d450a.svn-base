@charset "UTF-8";

*{
	margin: 0 auto;
	padding: 0;
}

.top{
	width: 100%;
	height:400px;
	padding-top: 30px;
	float:left;

}
.left{
	width: 30%;
	height: 400px;
	padding-left:70px;
	padding-top:120px;
	float: left;
}
.right{
	width:50%;
	height:400px;
	float:left;
}

table{
	float: left;
	margin-left: 20px;
}
table,td{
	color:#333;
	width:500px;
	height: 40px;
	border:1px solid #ccc;
	padding:5px;
	border-collapse:collapse;
	background:#f9f9f9;
	}
.nav{
	width:100%;
	height:30px;
	padding-left:15px;
	border-bottom: 1px solid #ccc;
}
.nav a{
	color:#999;
	text-decoration:none;
}
.nav a:hover{
     color:#36C706;
}
.nav span{
	color:#999;
}