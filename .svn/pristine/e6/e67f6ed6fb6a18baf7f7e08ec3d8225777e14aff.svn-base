*{
	margin: 0 auto;
	padding: 0;
}
body{
	background:#fff;
}
.top{
	width: 100%;
	height: 500px;
	padding-top: 10px;
}
.left{
	width: 800px;
	height: 300px;
	margin-left: 100px;
	float: left;
}
img{
	float: left;
}
table{
	float: left;
	margin-top:30px;
	margin-left: 20px;
}
table,td{
	color:#333;
	width:500px;
	height: 40px;
	border:1px solid #ccc;
	padding:5px;
	border-collapse:collapse;
	background:#f9f9f9;
	}
.nav{
	width:100%;
	height:30px;
	padding-left:15px;
	border-bottom: 1px solid #ccc;
}
.nav a{
	color:#999;
	text-decoration:none;
}
.nav a:hover{
     color:#36C706;
}
.nav span{
	color:#999;
}